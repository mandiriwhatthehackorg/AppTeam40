<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:paddingTop="@dimen/main_padding"
    android:paddingLeft="@dimen/main_margin"
    android:paddingRight="@dimen/main_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorBackgroundMission"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_mission"
                android:layout_width="@dimen/image_mission"
                android:layout_height="@dimen/image_mission"
                android:src="@drawable/mission_image"
                android:layout_marginLeft="@dimen/padding_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/main_padding"
                android:paddingTop="@dimen/main_margin"
                android:paddingBottom="@dimen/main_margin"
                android:paddingLeft="@dimen/padding_small"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/image_mission"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/title_mission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mandiri Mission"
                    android:textSize="@dimen/font_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/subtitle_mission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buat tujuan keuanganmu atau impianmu membeli produk tertentu dengan fitur ini."
                    android:textSize="@dimen/font_subtitle"
                    android:textColor="@color/colorGray" />

                <TextView
                    android:id="@+id/name_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mulai Misiku!"
                    android:textSize="@dimen/font_subtitle"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:paddingTop="@dimen/padding_large"
                    android:paddingLeft="@dimen/main_margin"
                    android:paddingBottom="@dimen/padding_large"
                    android:paddingRight="@dimen/main_margin"
                    android:background="@drawable/button_accent_1"
                    android:layout_marginTop="@dimen/padding_large"
                    app:layout_constraintTop_toBottomOf="@id/inc_menu"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>